## Rename this file to ".env" and fill in your real values.
## (Keep ".env" out of git to avoid committing secrets.)

# GitHub Personal Access Token (needs permission to read PR files and post PR comments)
GITHUB_TOKEN=

# Optional but recommended: must match the webhook secret configured in GitHub
GITHUB_WEBHOOK_SECRET=

# Optional: if empty, Slack notifications are skipped
SLACK_WEBHOOK_URL=

# Flask port (default in app.py is 5000)
PORT=5000


